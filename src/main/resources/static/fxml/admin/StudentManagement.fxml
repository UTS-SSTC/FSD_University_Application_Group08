<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.AnchorPane?>

<SplitPane xmlns:fx="http://javafx.com/fxml/1" orientation="HORIZONTAL" fx:controller="org.group08.controller.AdminController">
    <!-- 左边按钮列表 -->
    <VBox spacing="10" prefWidth="150">
        <Button text="Show Students" fx:id="showStudentsButton" onAction="#showStudents"/>
        <Button text="Group Students" fx:id="groupStudentsButton"/>
        <Button text="Partition Students" fx:id="partitionStudentsButton"/>
        <Button text="Remove a Student" fx:id="removeStudentButton"/>
    </VBox>

    <!-- 右边显示区域 -->
    <AnchorPane>
        <fx:include source="StudentDisplayArea.fxml"/>
    </AnchorPane>
</SplitPane>
